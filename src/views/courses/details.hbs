  <main>
      <div class="container">
          <h1 class="my-4">Course title : {{course.title}}
          </h1>

          <div class="row">

              <div class="col-md-8">
                  <img class="img-fluid" src="{{course.imageUrl}}" alt="Course picture" />
              </div>

              <div class="col-md-4 text-center">
                  <h3 class="my-3">Course Description</h3>
                  <p>{{course.description}}e</p>

                    {{#if user}}
                        {{#if course.owner}}
                        <a class="btn btn-danger" href="/courses/{{course._id}}/delete">Delete</a>
                        <a class="btn btn-warning" href="/courses/{{course._id}}/edit">Edit</a>
                        {{/if}}
                        {{#if course.hasEnrolled}}
                        <span class="enrolled-span">You are already enrolled</span>
                        {{/if}}
                        {{#if course.canEnroll}}
                        <a class="btn btn-primary" href="/courses/{{course._id}}/enroll">Enroll</a>
                        {{/if}}
                  {{/if}}

              </div>
          </div>
      </div>
  </main>
